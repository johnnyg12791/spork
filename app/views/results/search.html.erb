<div class="search">
    <h3>RESULTS</h3>
    <p>
    The best <%= @query %> in town is:
    </p>
    <table class="results" cellspacing="0">
      <% for option in @foods do %>
        <tr class="foods">
          <td><%= option %></td>
        </tr>
      <% end %>
      <% for option in @drinks do %>
        <tr class="drinks">
          <td><%= option %></td>
        </tr>
      <% end %>
    </table>
</div>