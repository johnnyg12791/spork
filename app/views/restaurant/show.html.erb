<div id="restaurant-page" class="container">
 <h1><%=@restaurant.name %></h1>
 <div class="stars"></div>

  <div class="hero">
    <%= image_tag(@hero_image, alt: "Hero image of #{@restaurant.name}") %>
  </div>

  <div class="row info">
    <div class="col-md-2">
      <h3>Hours</h3>
    </div>
    <div class="col-md-4">
      <h3><%= @restaurant.hours %></h3>
    </div>
    <div class="col-md-2">
      <h3>Address</h3>
    </div>
    <div class="col-md-4">
      <p><%= @restaurant.address %></p>
    </div>
  </div>

  <div class="top-rated">
    <h1>Top Rated
      <small>link to menu>></small>
    </h1>
    <div class="row image-tile-row">
      <% for i in 1..4 %>
        <div class="col-md-2">
          <%= render "shared/item_square" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="reviews">
    <h1>Reviews (<%= @num_reviews %>)</h1>

    <% for review in @ratings %>
      <div class="review">
        <div class="col-md-1">
          <%= image_tag("test.jpg", :alt => "test", height: "100px", width: "100px") %>
        </div>
        <div class="col-md-11">
          <h2><%= review.ratable.dish_name %></h2>
          <p>
            <% for star in 1..review.score %>
              <span class="glyphicon glyphicon-star"></span>
            <% end %>
            <% for star in review.score+1..5 %>
              <span class="glyphicon glyphicon-star-empty"></span>
            <% end %>
          </p>
          <p><%= review.comment %></p>
        </div>
      </div>
    <% end %>
  </div>

</div>