<div class="jumbotron" id="home-jumbotron">
  <form class="form-inline" role="form" id="home-search" action="/results/search?render=default" method="POST">
    <div class="form-group">
      <label class="sr-only" for="search-item">What are you looking for?</label>
      <input type="text" class="form-control" id="search-item" name="search_item" placeholder="e.g. tacos, sushi">
    </div>
    <span>near</span>
    <div class="form-group">
      <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="Get current location" id="location-button">
        <span class="glyphicon glyphicon-map-marker" id="location-button-icon"></span>
        <img src="/assets/712.GIF" id="location-button-loading-gif">
      </button>
      <label class="sr-only" for="search-location">Where are you looking for it?</label>
      <input type="text" class="form-control" id="search-location" name="search_loc" placeholder="e.g. Palo Alto, CA">
      <input type="hidden" class="form-control" id="search-location-lat" name="search_lat" value="37.441880">
      <input type="hidden" class="form-control" id="search-location-long" name="search_long" value="-122.143020">
    </div>
    <button type="submit" class="btn btn-default" id="search-button">
      <span class="glyphicon glyphicon-search"></span>
    </button>
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  </form>
  <div id="showcase-item-rating">
    <% for i in (1..4) %>
    <span class="glyphicon glyphicon-star"></span>
    <% end %>
    <div id>Seared Scallops at The French Laundry</div>
  </div>
</div>


<div class="container-fluid search-results">
  <div class="row">
    <div class="col-sm-12">
      <h2 id="popular-items-heading">Getting your location...</h2>
      <div class="progress progress-striped active" id="popular-items-progress-bar">
        <div class="progress-bar progress-bar-danger" role="progressbar" style="width:100%"></div>
      </div>
    </div>
  </div>
  <br/>
  <div id="popular-items">
  </div>
</div>
