<div class="item-square">
  <% if dish %>
    <a href="/food/index/<%= dish.id %>">
      <%= image_tag('https://s3.amazonaws.com/spork-pictures-2/food_item_' + dish.id.to_s + '.jpg') %>
    </a>
    <p/>
    <div>
      <% if dish.rating == nil %>
        <span>Not rated yet</span>
      <% else %>
        <% for i in (1..dish.rating.round) %>
          <span class="glyphicon glyphicon-star"></span>
        <% end %>
        <% for i in (dish.rating.round+1..5) %>
          <span class="glyphicon glyphicon-star-empty"></span>
        <% end %>
      <% end %>
      <span class="item-square-price"><%= dish.price %></span>
    </div>
    <a class="item-link" href="/food/index/<%= dish.id %>"><%= dish.dish_name %></a>
    <div>
      at <a class="restaurant-link" href="/restaurant/show/<%= dish.restaurant_id %>"><%= dish.restaurant.name %></a>
    </div>
  <% end %>
</div>