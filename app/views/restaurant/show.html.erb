<div id="restaurant-page" class="page container">
 <h1><%=@restaurant.name %></h1>
 <div class="stars">
  <% for star in 1..@average_score %>
    <span class="glyphicon glyphicon-star"></span>
  <% end %>
  <% for star in @average_score+1..5 %>
    <span class="glyphicon glyphicon-star-empty"></span>
  <% end %>
 </div>

  <div class="hero">
    <%= image_tag("restaurants/" + @hero_image, alt: "Hero image of #{@restaurant.name}") %>
  </div>

  <div class="row info">
    <% if @restaurant.hours %>
      <div class="col-md-2">
        <strong>Hours</strong>
      </div>
      <div class="col-md-4">
        <%= @restaurant.hours %>
      </div>
    <% end %>
    <% if @restaurant.address %>
      <div class="col-md-2">
        <strong>Address</strong>
      </div>
      <div class="col-md-4">
        <%= @restaurant.address %>
      </div>
    <% end %>
  </div>

  <div class="top-rated padded">
    <h2>Top Rated
      <small><%= link_to "Menu >>", {controller: "restaurant", action: "menu", id: @restaurant.id } %></small>
    </h2>
    <div class="row image-tile-row">
      <% numToDisplay = (@foods_by_rating.length < 4) ? @foods_by_rating.length : 4 %>
      <% for i in 0..numToDisplay-1 %>
        <div class="col-md-2">
          <%= render :partial => "shared/item_square", :locals => {:dish => @foods_by_rating[i]} %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="reviews padded">
    <h2>Reviews (<%= @num_reviews %>)</h2>

    <% for review in @ratings %>
      <div class="review">
        <div class="col-md-2 left">
          <%= image_tag("test.jpg", :alt => "test", height: "100px", width: "100px") %>
        </div>
        <div class="col-md-10 right">
          <a href="../../food/index/<%=review.ratable.id%>">
            <h3><%= review.ratable.dish_name %></h3>
          </a>
          <p>
            <% for star in 1..review.score %>
              <span class="glyphicon glyphicon-star"></span>
            <% end %>
            <% for star in review.score+1..5 %>
              <span class="glyphicon glyphicon-star-empty"></span>
            <% end %>
          </p>
          <% if user = User.find_by_id(review.user_id) %>
            <h4>
              Review by <%= link_to "#{user.first_name} #{user.last_name}", 
                {controller: "user", action: "profile", id: user.id } %>
            </h4>
          <% end %>
          <p>"<%= review.comment %>"</p>
        </div>
      </div>
    <% end %>
  </div>

</div>