<%= content_tag :div, id: "results-search-data", data: { search_item: @search_item, search_loc: @search_loc, search_lat: @search_lat, 
  search_long: @search_long, restaurants: @restaurants } do end %>

<div class="map-search">
  <div id="map-bar">
    Max Distance (in miles):
    <input id="distanceMap" name="distance">
    <button id="updatemap">Update Map</button>
  </div>
</div>
 
<div id="map-canvas" style="width:100%;height:380px;"></div>

<div class="container-fluid search-results">
  <div class="row">
    <div class="col-sm-12">
      <h2>Search Results</h2>
    </div>
  </div>
  <%= render :partial => "shared/item_squares", :locals => {:dishes => @dishes} %>
</div>